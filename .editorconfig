root = true

[*]
insert_final_newline = true
end_of_line = lf
charset = utf-8

# version file should never get a newline
[.version]
insert_final_newline = false
end_of_line = lf
charset = utf-8

[*.{cpp,cxx,cc,hpp,hxx,hh,h,c}]
indent_style = space
indent_size = 4

[meson.*]
indent_style = space
indent_size = 4

[*.nix]
indent_style = space
indent_size = 2

[*.{scd,scd.in}]
insert_final_newline = true
