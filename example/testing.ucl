repository {
    url: https://codeberg.org/wreedb/config.git
}

links {
    ansible {
        source: ${REPO}/.config/ansible/ansible.cfg
        destdir: ${XDG_CONFIG_HOME}/ansible
    }
}

templates {
    config {
        source: ${REPO}/.config/%{item}
        dest: ${XDG_CONFIG_HOME}/%{item}
        items: [
            btop/btop.conf
            micro
        ]
    }
}